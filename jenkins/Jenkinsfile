pipeline {
    agent any
    
    environment {
        APP_NAME = 'compliance-api'
        DOCKER_REGISTRY = 'tbrown320'  // CHANGE THIS
        AWS_REGION = 'us-east-1'
        BUILD_VERSION = "${env.BUILD_NUMBER}-${env.GIT_COMMIT?.take(7) ?: 'local'}"
    }
    
    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'staging', 'prod'],
            description: 'Target environment'
        )
        booleanParam(
            name: 'RUN_SECURITY_SCAN',
            defaultValue: true,
            description: 'Run security scans'
        )
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "üîÑ Checking out code..."
                checkout scm
                script {
                    env.GIT_COMMIT = sh(
                        script: "git rev-parse HEAD",
                        returnStdout: true
                    ).trim()
                }
            }
        }
        
        stage('Setup') {
            steps {
                echo "üêç Setting up Python environment..."
                sh '''
                    cd app
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    pip install flake8 pylint black safety bandit
                '''
            }
        }
        
        stage('Lint') {
            steps {
                echo "üîç Checking code quality..."
                sh '''
                    cd app
                    . venv/bin/activate
                    black --check . || true
                    flake8 . --max-line-length=120 --exclude=venv || true
                    pylint *.py --disable=C0111 || true
                '''
            }
        }
        
        stage('Test') {
            steps {
                echo "üß™ Running tests..."
                sh '''
                    cd app
                    . venv/bin/activate
                    cd ..
                    pytest tests/ --cov=app --cov-report=xml --cov-report=html --junitxml=test-results.xml -v
                '''
            }
            post {
                always {
                    junit 'test-results.xml'
                    publishHTML([
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ])
                }
            }
        }
        
        stage('Security Scan') {
            when {
                expression { params.RUN_SECURITY_SCAN }
            }
            steps {
                echo "üîí Scanning for vulnerabilities..."
                sh '''
                    cd app
                    . venv/bin/activate
                    safety check || true
                    bandit -r . -f json -o bandit-report.json || true
                '''
            }
        }
        
        stage('Build Image') {
            steps {
                echo "üê≥ Building Docker image..."
                script {
                    dockerImage = docker.build(
                        "${DOCKER_REGISTRY}/${APP_NAME}:${BUILD_VERSION}",
                        "-f app/Dockerfile app/"
                    )
                }
            }
        }
        
        stage('Push Image') {
            steps {
                echo "üì§ Pushing to registry..."
                script {
                    docker.withRegistry('', 'dockerhub-credentials') {
                        dockerImage.push("${BUILD_VERSION}")
                        dockerImage.push("latest")
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo "üöÄ Deploying to ${params.ENVIRONMENT}..."
                script {
                    if (params.ENVIRONMENT == 'prod') {
                        input message: 'Deploy to Production?', ok: 'Deploy'
                    }
                }
                sh """
                    echo "Deployment to ${params.ENVIRONMENT}"
                    echo "In production: aws ecs update-service..."
                """
            }
        }
    }
    
    post {
        success {
            echo "‚úÖ Pipeline SUCCESS!"
            echo "Version: ${BUILD_VERSION}"
        }
        failure {
            echo "‚ùå Pipeline FAILED!"
        }
        always {
            cleanWs()
        }
    }
}